    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const profileButton = document.getElementById("profile-button");
            const addressButton = document.getElementById("address-button");
            const passwordButton = document.getElementById("password-button");
            const walletButton = document.getElementById("wallet-button");
            const referralButton = document.getElementById("referral-button");

            const profileDiv = document.getElementById("profile");
            const addressDiv = document.getElementById("address");
            const passwordDiv = document.getElementById("change-password");
            const walletDiv = document.getElementById("wallet");
            const referralDiv = document.getElementById("referral");

            function showProfile() {
                profileDiv.style.display = "block";
                addressDiv.style.display = "none";
                passwordDiv.style.display = "none";
                walletDiv.style.display = "none";
                referralDiv.style.display = "none";

                setActiveButton(profileButton);
            }

            function showAddress() {
                profileDiv.style.display = "none";
                addressDiv.style.display = "block";
                passwordDiv.style.display = "none";
                walletDiv.style.display = "none";
                referralDiv.style.display = "none";

                setActiveButton(addressButton);
            }

            function showChangePassword() {
                profileDiv.style.display = "none";
                addressDiv.style.display = "none";
                passwordDiv.style.display = "block";
                walletDiv.style.display = "none";
                referralDiv.style.display = "none";

                setActiveButton(passwordButton);
            }

            function showWallet() {
                profileDiv.style.display = "none";
                addressDiv.style.display = "none";
                passwordDiv.style.display = "none";
                walletDiv.style.display = "block";
                referralDiv.style.display = "none";

                setActiveButton(walletButton);
            }

            function showReferral() {
                profileDiv.style.display = "none";
                addressDiv.style.display = "none";
                passwordDiv.style.display = "none";
                walletDiv.style.display = "none";
                referralDiv.style.display = "block";

                setActiveButton(referralButton);
            }

            function setActiveButton(button) {
                // Remove "active" class from all buttons
                profileButton.classList.remove("active");
                addressButton.classList.remove("active");
                passwordButton.classList.remove("active");
                walletButton.classList.remove("active");
                referralButton.classList.remove("active");

                // Add "active" class to the clicked button
                button.classList.add("active");
            }

            profileButton.addEventListener("click", showProfile);
            addressButton.addEventListener("click", showAddress);
            passwordButton.addEventListener("click", showChangePassword);
            walletButton.addEventListener("click", showWallet);
            referralButton.addEventListener("click", showReferral);
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const referralLinkButton = document.getElementById("referral-link");

            referralLinkButton.addEventListener("click", function () {
                // Select the text in the button
                const linkToCopy = document.createElement("textarea");
                linkToCopy.value = referralLinkButton.value;
                document.body.appendChild(linkToCopy);
                linkToCopy.select();
                
                // Copy the text to the clipboard
                document.execCommand("copy");

                // Clean up and remove the temporary textarea
                document.body.removeChild(linkToCopy);

                // Optionally, provide some feedback to the user
                alert("Referral link copied to clipboard!");
            });
        });
    </script>




