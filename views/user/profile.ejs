                                        <th>User Name</th>
                                        <th>Cash Earned</th>
                                    </tr>
                                    <% newuser.referredUsers.forEach((x,index) => { %>
                                        
    
                                        <tr>
                                            <td><%= index+1 %></td>
                                            <td><%=x.name  %></td>
                                            <td>Rs.100</td>
                                        </tr>
                                     
                                    <% }) %>
                                  

                                    <tr>
                                        <td colspan="2"></td>
                                        <th class="fs-4 fw-bold">Total Earned: Rs.<%= newuser. referedAmount %></th>
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </div>
                    <% if (newuser.rereferredBy) { %>
                        <p class="text-center">You were Referred by <span class="fw-bold text-success"><%=newuser.rereferredBy.name  %></span></p>
                     
                    <% } %>
                    
                </div>


            </div>
        </div>
